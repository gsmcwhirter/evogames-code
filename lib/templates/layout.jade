!!! 5
html
  head
    title= title || "Demo System"
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="copyright", content=copyright)
    meta(name="description", content=description)
    meta(name="keywords", content=keywords)
    meta(http-equiv="X-UA-Compatible", content="IE=8")
    
    link(rel="icon", type="image/x-icon", href="/images/favicon.ico")
    link(rel="stylesheet", type="text/css", media="all", href="/css/reset-fonts.css")
    link(rel="stylesheet", type="text/css", media="all", href="/css/lightbox.css")
    link(rel="stylesheet", type="text/css", media="all", href="/css/dogpea.css")
    
    script(type="text/javascript", src="/js/jquery/jquery.min.js")
    script(type="text/javascript", src="/js/jquery/lightbox.min.js")
    script(type="text/javascript", src="/js/jquery/tools.min.js")
    script(type="text/javascript", src="/js/swfobject/videoembed.js")
    script(type="text/javascript", src="/js/tinymce/tiny_mce.js")
    script(type="text/javascript", src="/js/lib/sha1.js")
    script(type="text/javascript", src="/js/lib/underscore.min.js")
    script(type="text/javascript", src="/js/system.js")
  body
    #everything
      #header
        a.header(href="/") &nbsp;
        - if (!is_ssl || player)
          #status
            - if (player)
              #status-info
                #status-avatar
                  - if (player.avatar)
                    img(alt="Player Avatar", src=player.avatar)
                  - else
                    img(alt="Player Avatar", src=default_avatar)
                span
                  #{player.name}
                  - if (player.is_sysop)
                    span.sysop SysOp
                  - else if (player.is_staff)
                    span.staff Staff
                br
                a(href="/controls") Controls
                |
                a(href="/logout") Log Out
                br
                a(href="#") Inbox [#{player.messages.new}]
            - else
              #status-info
                #status-avatar
                  img(alt="Player Avatar", src=default_avatar)
                span Welcome, Guest!
                br
                a(href="/login") Log In
                |
                a(href="/register") Register
      #content-1
        #content-2
          #content-3
            - if (menu_content.right)
              #rightmenu!= menu_content.right
            - if (!is_ssl)
              #leftmenu!= menu_content.left
              #body!= body_content
            - else
              #body.body-ssl!= body_content
      - if (!is_ssl)
        #footer
          #footer-left &nbsp;
          #footer-right &nbsp;
          #footer-center
            a(href="#") Report Bugs
            |
            a(href="#") Site Feedback
        #subfooter
          #branding
          strong= name+":"
          a(href="/") Home
          |
          a(href="#") Help
          |
          a(href="#") Contact Us
          |
          a(href="#") About Us
          |
          a(href="#") Site Map
          |
          a(href="#") Volunteer
          |
          a(href="#") Management
          br
          strong Connect:
          a(href="#") X-Fire
          |
          a(href="#") Facebook
          |
          a(href="#") Twitter
          |
          a(href="#") YouTube
          |
          a(href="#") Blog
          |
          a(href="#") RSS
          br
          strong Legal:
          a(href="#") Terms of Use
          |
          a(href="#") Privacy Policy
          |
          #{copyright}
    - if (player.is_sysop)
      #debug
        #debug-header
          a#debug-expander(href="#")
          a#debug
          Debug
        #debug-content
          pre= debug_content
    //:javascript
    :cdata
      | var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      | document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    //:javascript
    :cdata
      | try {
      |   var pageTracker = _gat._getTracker("#{analytics}");
      |   pageTracker._trackPageview();
      | } catch(err) {}
