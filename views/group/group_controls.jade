- if (typeof is_full != "undefined" && is_full)
  #breadcrumbs
    != partial('breadcrumbs', {collection: crumbs, as: 'crumb'})

  h1= "Manage "+group.name
- else
  h3= group.name

ul.grid
  li
    a(href="/group/controls/"+group.code+"/edit") Group Information
    br
    | Edit the group name, description, website, etc.
  li
    a(href="/group/controls/"+group.code+"/requests") Membership Requests
    br
    | Approve or deny membership requests.
  li
    a(href="/group/controls/"+group.code+"/members") Current Members
    br
    | Edit group member status.
  li
    a(href="/group/controls/"+group.code+"/invites") Invitations
    br
    | Invite new members to your group.

ul.grid
  li
    a(href="/group/profile/"+group.code) View Profile
    br
    | View the group profile.
  li
    a(href="/group/profile/"+group.code+"/members") View Members List
    br
    | View the group membership list.