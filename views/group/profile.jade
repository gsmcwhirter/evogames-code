#breadcrumbs
  != partial('breadcrumbs', {collection: crumbs, as: 'crumb'})
  
#group-profile
  - if (group.logo)
    img.logo(src=group.logo, alt="Group Logo")

  h1= group.name

  - if (editable)
    p.small
      a(href="/group/controls/"+group.code) Manage Group

  h2 About
  != gdescription

  ul.profile
    li
      span.label Website:&nbsp;
      - if (group.website)
        span
          a(href=group.website)= group.website
      - else
        span (not listed)
        
    li
      span.label Created On:&nbsp;
      span= datetime(group.created_at)

    li
      span.label Owners:&nbsp;
      ul
        - each owner in owners
          li
            a(href="/player/profile/"+encodeURI(owner.aliases[0])+"@"+encodeURI(owner.handle))
              span.alias= owner.aliases[0]
              span.handle= "@"+owner.handle

    li
      span.label= "Members: "+ member_count
      - if (player && (group.join_type == "approval" || group.join_type == "open"))
        span.small
          |  (
          a(href="/group/join/"+group.code) join group
          |  )
      br
      span.small
        a(href="/group/profile/"+group.code+"/members") view member list
      

  h2 Events
  ul.profile
    li

  h2 Tournaments
  ul.profile
    li

  h2 Ladders
  ul.profile
    li