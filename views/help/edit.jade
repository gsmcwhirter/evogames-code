h1 Help: Edit Question
form(method="post", accept-charset="utf-8")
  fieldset
    input(type="hidden", name="csrf", value=csrf)
    .form-line
      label(for="question") Question
      br
      - if (messages["question"] && messages["question"].length)
        ul.field-error
          - each msg in messages["question"]
            li!= "Question " + msg
      input#question.title(type="text", name="question", value=data["question"])
      span.field-status
        span &nbsp;
    .form-line
      label(for="slug") Slug
      br
      - if (messages["slug"] && messages["slug"].length)
        ul.field-error
          - each msg in messages["slug"]
            li!= "Slug " + msg
      input#saved-slug(type="hidden", value=data["_sslug"])
      input#slug.text(type="text", name="slug", value=data["slug"])
      span.field-status
        span &nbsp;
    .form-line
      label(for="tags") Tags
      br
      - if (messages["tags"] && messages["tags"].length)
        ul.field-error
          - each msg in messages["tags"]
            li!= "Tags " + msg
      input#tags.text(type="text", name="tags", value=data["tags"] ? data["tags"].join(", ") : "")
      span.field-status
        span &nbsp;
    .form-line
      label(for="answer") Answer
      span.small
        |  (
        a(href="http://daringfireball.net/projects/markdown/syntax", rel="blank") markdown syntax
        |  )
      br
      - if (messages["answer"] && messages["answer"].length)
        ul.field-error
          - each msg in messages["answer"]
            li!= "Answer " + msg
      textarea#answer(name="answer")= data["answer"] || ""
    .form-line
      button.button.positive(type="submit")
        img(src="/css/icons/tick.png",alt="")
        | &#32;Save Answer
      span.link-sep
      a.button.negative(href="/help")
        img(src="/css/icons/cross.png",alt="")
        | &#32;Cancel

script(type="text/javascript",src="/js/validators/helpquestion.js")
script(type="text/javascript",src="/js/validators/helpslug.js")
script(type="text/javascript",src="/js/validators/newstags.js")