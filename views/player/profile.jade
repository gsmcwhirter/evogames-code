#breadcrumbs
  != partial('breadcrumbs', {collection: crumbs, as: 'crumb'})
  
#player-profile
  img.avatar(src=avatar(player, 160))

  h1
    span.alias= alias
    span.handle= "@"+player.handle

  h2 About
  ul.profile
    li
      span.label Joined On:
      | 
      span= datetime(player.created_at)

  h3 Aliases
  ul.profile
    - each oalias in player.aliases
      li
        a(href="/player/profile/"+encodeURI(oalias)+"@"+encodeURI(player.handle))
          span.alias= oalias
          span.handle= "@"+player.handle

  h3 Groups
  ul.profile
    li

  h2 Events
  ul.profile
    li

  h2 Tournaments
  ul.profile
    li

  h2 Ladders
  ul.profile
    li