h1 Event Registrations

div#registrations
  h2 Approved
  h3 Current
  ul.invited-groups.admin
    -each event in approved_registrations.current
      li(title=event.event.slug)
        span.alias= event.alias
        span.handle= "@"+player.handle
        span.link-sep
        a(href="/game/"+event.game.code+"/event/"+event.event.slug)= event.event.name
        span= " ("+event.game.code.toUpperCase()+")"
    li.last

  h3 Future
