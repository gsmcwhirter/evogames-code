#breadcrumbs
  != partial('breadcrumbs', {collection: crumbs, as: 'crumb'})

h1= game.name

- if (editable)
  p
    a(href="/game/"+game.code+"/edit") Edit Game Information
    br
    a(href="/game/"+game.code+"/gametypes") Edit Game Types

h2 Description
!= game.description

ul.grid3
  li
    a(href="/game/"+game.code+"/event") Events
    br
    | View and Manage Events
  li
    a(href="/game/"+game.code+"/tournament") Tournaments
    br
    | View and Manage Tournaments
  li
    a(href="/game/"+game.code+"/ladder") Ladders
    br
    | View and Manage Ladders

.left-col
  h2 Current Events
  ul.fp-block

    li
      a(href="/game/"+game.code+"/event") View All Events

  h2 Current Tournaments
  ul.fp-block

    li
      a(href="/game/"+game.code+"/tournament") View All Tournaments

  h2 Current Ladders
  ul.fp-block

    li
      a(href="/game/"+game.code+"/ladder") View All Ladders

.right-col
  h2 Future Events
  ul.fp-block

    li
      a(href="/game/"+game.code+"/event") View All Events
  h2 Future Tournaments
  ul.fp-block

    li
      a(href="/game/"+game.code+"/tournament") View All Tournaments

  h2 Future Ladders
  ul.fp-block

    li
