.match-display
  - if (typeof show_header != "undefined" && show_header)
    h2= event.name
    h3= game.name+", "+event.gametype.name.toUpperCase()
  a(href="/game/"+game.code+"/event/"+event.slug+"/matches/"+match._id.substring(12))
    h4= "Match ID: "+match._id.substring(12)
  .submitted-by
    | Submitted by:&#32;
    span.handle.only= "@"+match.submitted_by
    |  on
    = datetime(match.created_at)
  .gametype.template= JSON.stringify(event.gametype);
  ul.teams
    - each team, tindex in match.teams
      li.team
        h3= "Team "+(tindex + 1)
        table.players
          thead
            tr
              - if (event.event_type == "group_register")
                th(style="width: 10%;") Group
                th(style="width: 20%;") Player
              - else
                th(style="width: 30%;") Player
              - var width = Math.round(68. / (event.gametype.stats.length + 1), 2)
              th.rating-head(style="width: "+width+"%;") Rating
              - each stat in event.gametype.stats
                th(class="stat-head "+stat.valtype, style="width: "+width+"%;", title=stat.name)= stat.name[0].toUpperCase() + stat.name.substring(1)
          tbody
            - each player in team.players
              tr.player
                - if (event.event_type == "group_register")
                  td(style="width: 10%;")
                    a(href="/group/"+player.groupcode)= player.groupcode
                  td(style="width: 20%;")
                    a(href="/player/"+player.alias+"@"+player.handle)
                      span.alias= player.alias
                      span.handle= "@"+player.handle
                - else
                  td(style="width: 30%;")
                    a(href="/player/"+player.alias+"@"+player.handle)
                      span.alias= player.alias
                      span.handle= "@"+player.handle
                - var width = Math.floor(70. / (event.gametype.stats.length + 1) * 100) / 100
                td(style="width: "+width+"%;")= Math.round(player.rating * 100) / 100
                - each stat in event.gametype.stats
                  td(style="width: "+width+"%;")
                    - if (stat.valtype == "integer" || stat.valtype == "float" || stat.valtype == "formula")
                      = Math.round(player.stats[stat.name] * 100) / 100
                    - else
                      = player.stats[stat.name]
          tfoot
            tr
              - if (event.event_type == "group_register")
                td(style="width: 30%;", colspan="2")
                  span.record
                    | Record:&#32;
                    = team.wins+"-"+team.losses+"-"+team.ties
              - else
                td(style="width: 30%;")
                  span.record
                    | Record:&#32;
                    = team.wins+"-"+team.losses+"-"+team.ties
              - var width = Math.round(68. / (event.gametype.stats.length + 1), 2)
              td(style="width: "+width+"%;")
              - each stat in event.gametype.stats
                td(style="width: "+width+"%;")